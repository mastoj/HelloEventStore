@handler HelloEventStore.Web.Index

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hello event store</title>

    <!-- Bootstrap core CSS -->
    <link href="/app/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="/app/bower_components/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet">
    <link href="/app/css/site.css" rel="stylesheet">
</head>

<body ng-app="app">
    <div class="container" ng-view>
    </div>

    <script type="text/ng-template" id="directives/objectModelInput/string.html">
        <input type="text" ng-model="value" />
    </script>

    <script type="text/ng-template" id="directives/objectModelInput/integer.html">
        <input type="number" step="1" ng-model="value" />
    </script>

    <script type="text/ng-template" id="directives/objectModelInput/datetime.html">
        <input type="datetime" ng-model="value" />
    </script>

    <script type="text/ng-template" id="directives/objectModelInput.html">
        <div>
            {{objectModel.name | splitCamel}}
            <ul>
                <li ng-repeat="arg in objectModel.arguments">
                    <div>
                        <label>{{arg.name | splitCamel}}</label>
                    </div>
                    <div>
                        <input-field value="arg.value" type="arg.type" />
                    </div>
                </li>
            </ul>
            <button ng-show="deletable" ng-click="deleteItem()">Delete</button>
        </div>
    </script>

    <script type="text/ng-template" id="index.html">
        <h1>Specifications</h1>
        <a href="/#/specification" class="btn btn-default" ng-click="">New specification</a>
    </script>

    <script type="text/ng-template" id="specification/precondition.html">
        <h2>Add precondition</h2>
        <div class="row">
            <div class="col-lg-6">
                <h3>Choose preconditions</h3>
                <ul>
                    <li ng-repeat="item in events">
                        {{item.name | splitCamel}}
                        <button ng-click="addPreCondition(item)">Add</button>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <h3>Selected preconditions</h3>
                <ul>
                    <li ng-repeat="item in preConditionList">
                        <label>Id</label>
                        <input type="text" ng-model="item.id" />
                        <object-model-input object-model="item.objectModel" deletable="true" on-delete="deletePreCondition(item)"></object-model-input>
                    </li>
                </ul>
            </div>
        </div>
    </script>

    <script type="text/ng-template" id="specification/action.html">
        <h2>Specify action</h2>
        <div class="row">
            <div class="col-lg-6">
                <h3>Choose action</h3>
                <div class="row" ng-repeat="item in commands">
                    <div class="col-lg-12">
                        {{item.name | splitCamel}}
                        <button ng-click="setAction(item)">Set action</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <h3>Selected action</h3>
                <div ng-switch="hasAction()">
                    <div ng-switch-when="true">
                        <object-model-input object-model="specification.action" deletable="false"></object-model-input>
                    </div>
                    <div ng-switch-default>
                        Choose command
                    </div>
                </div>
            </div>
        </div>
    </script>

    <script type="text/ng-template" id="specification/postcondition.html">
        <h2>Add postcondition</h2>
        <div class="row">
            <div class="col-lg-6">
                <h3>Choose postconditions</h3>
                <ul>
                    <li ng-repeat="item in events">
                        {{item.name | splitCamel}}
                        <button ng-click="addPostCondition(item)">Add</button>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <h3>Selected postconditions</h3>
                <ul>
                    <li ng-repeat="objectModel in specification.postCondition">
                        <object-model-input object-model="objectModel" deletable="true" on-delete="deletePostCondition(objectModel)"></object-model-input>
                    </li>
                </ul>
            </div>
        </div>
    </script>

    <script type="text/ng-template" id="specification/result.html">
        Magic result!
    </script>

    <script type="text/ng-template" id="specification.html">
        <ng-include src="stepTemplate()"></ng-include>
        <button class="btn btn-default" type="button" ng-click="previousStep()" ng-disabled="previousDisabled()">Previous</button>
        <button class="btn btn-default" type="button" ng-click="nextStep()" ng-disabled="nextDisabled()">Next</button>
        <button class="btn btn-default" type="button" ng-click="runSpecification()" ng-disabled="executeDisabled()">Execute</button>
        <pre>{{commands | json}}</pre>
    </script>

    <script src="/app/bower_components/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/app/bower_components/boostrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/app/bower_components/underscore/underscore.js" type="text/javascript"></script>
    <script src="/app/bower_components/angular/angular.min.js" type="text/javascript"></script>
    <script src="/app/bower_components/angular-route/angular-route.min.js" type="text/javascript"></script>
    <script src="/app/bower_components/angular-sanitize/angular-sanitize.min.js" type="text/javascript"></script>
    <script src="/app/js/app.js" type="text/javascript"></script>
</body>
